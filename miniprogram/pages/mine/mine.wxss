page {
  background-color: #DCE9F1;
}
.container .user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.container .user_info_wrap .user_img_wrap {
  position: relative;
}
.container .user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
}
.container .user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  text-align: center;
}
.container .user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 8rpx solid var(--themeColor);
}
.container .user_info_wrap .user_img_wrap .user_info .user_name {
  color: #FFFFFF;
  margin-top: 0rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.container .user_info_wrap .user_btn {
  width: 200rpx;
  height: 100rpx;
  position: relative;
  background-color: white;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  color: black;
  font-size: 38rpx;
  font-weight: 550;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  border-radius: 15rpx;
}
.container .user_content {
  position: relative;
}
.container .user_content .user_main {
  padding-bottom: 50rpx;
  color: #666;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.container .user_content .user_main .history_wrap {
  height: 150rpx;
  width: 600rpx;
  background-color: white;
  display: flex;
  border-radius: 10rpx;
  margin-left: 37rpx;
  justify-content: center;
  align-items: center;
}
.container .user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  color: #5C5F63;
}
.container .user_content .user_main .history_wrap navigator .his_number {
  color: #C3C8CE;
  margin-top: 20rpx;
}
.container .user_content .user_main .orders_wrap {
  background-color: white;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.container .user_content .user_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.container .user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.container .user_content .user_main .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.container .user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.container .user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
}
.container .user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.container .user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
}
.container .user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.container .user_content .user_main .re {
  margin-bottom: 100rpx;
}
.container .user_content .user_main .re .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
}
